{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ES2020", // capaz tenga que cambiar esto,
    "types": ["node"],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}